{
  "name": "@rweich/streamdeck-ts",
  "version": "1.0.2",
  "description": "sdk to create streamdeck plugins in typescript",
  "author": "rweich",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rweich/streamdeck-ts.git"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.12.7",
    "ajv": "^6.12.4",
    "eventemitter3": "^4.0.7",
    "isomorphic-ws": "^4.0.1",
    "ts-log": "^2.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/chai": "^4.2.14",
    "@types/chai-json-schema": "^1.4.6",
    "@types/mocha": "^8.2.0",
    "@types/sinon": "^9.0.10",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "chai": "^4.2.0",
    "chai-json-schema": "^1.5.1",
    "coveralls": "^3.1.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "organize-imports-cli": "^0.8.0",
    "prettier": "npm:@btmills/prettier",
    "semantic-release": "^17.3.7",
    "sinon": "^9.2.2",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "ts-type-guards": "^0.7.0",
    "typescript": "^4.1.3",
    "ws": "^7.4.2"
  },
  "scripts": {
    "ci": "yarn type-check && yarn lint && yarn lint-tests && yarn test",
    "clean": "rm -rf dist/*",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "eslint ./src/**/*.ts",
    "lint-tests": "eslint test/**/*.ts",
    "type-check": "tsc --noEmit",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\"}' mocha",
    "test-coverage": "nyc yarn test",
    "test-coverage-report": "yarn test-coverage && nyc report --reporter=text-lcov | coveralls"
  },
  "files": [
    "README.md",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "organize-imports-cli",
      "prettier --write"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "text",
      "lcov"
    ]
  }
}
